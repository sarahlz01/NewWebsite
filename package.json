{
  "name": "newwebsite",
  "version": "1.0.0",
  "description": "my NEW and IMPROVED website that is super cool and awesome",
  "scripts": {
    "build-css": "npx tailwindcss -i ./style.css -o ./dist/style.css --watch",
    "build": "npx tailwindcss -i ./style.css -o ./dist/style.css",
    "start": "npm run build && live-server --port=3000 --open=/index.html",
    "dev": "concurrently \"npm run build-css\" \"live-server --port=3000 --open=/index.html\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}
